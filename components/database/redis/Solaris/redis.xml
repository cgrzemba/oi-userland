<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<!--
        Created by Manifold
--><service_bundle type="manifest" name="redis">

    <service name="site/redis" type="service" version="1">

        <create_default_instance enabled="false"/>
        
        <single_instance/>

        <dependency name="network" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/milestone/network:default"/>
        </dependency>

        <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>


        
        
        
        
        <method_context>
            <method_credential user="redis" group="redis"/>
        </method_context>

        <exec_method type="method" name="start" exec="/usr/sbin/redis-server %{config_file}" timeout_seconds="60"/>

        <exec_method type="method" name="stop" exec="/usr/bin/redis-cli -p %{config_port} shutdown" timeout_seconds="60"/>

        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="child"/>
            
            
            <propval name="ignore_error" type="astring" value="core,signal"/>
        </property_group>

        <property_group name="application" type="application">
            <propval name="config_file" type="astring" value="/etc/redis/redis_6379.conf"/>
            <propval name="config_port" type="integer" value="6379"/>
        </property_group>
        
        
        <stability value="Evolving"/>

        <template>
            <common_name>
                <loctext xml:lang="C">
                    Redis
                </loctext>
            </common_name>
        </template>

    </service>

</service_bundle>
